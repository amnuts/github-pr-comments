{
  "manifest_version": 3,
  "name": "GitHub PR Comment Indicator",
  "version": "1.1.0",
  "description": "When doing code reviews it's handy to see on which files you've made comments",
  "homepage_url": "https://github.com/amnuts/github-pr-comments",
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*/pull/*",
        "*://*.github.com/*/actions",
        "*://*.github.com/*/actions/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ]
}